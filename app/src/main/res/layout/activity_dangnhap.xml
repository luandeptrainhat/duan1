<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.dangnhap"
    android:background="@drawable/gradient">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/login"
        android:layout_gravity="center"


        app:civ_border_color="#24AE82"

        app:civ_border_width="3dp" >

    </de.hdodenhof.circleimageview.CircleImageView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginTop="20dp"
        android:orientation="vertical"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="FIVESOLE SHOES STORE"
            android:layout_gravity="left"
            android:textColor="#C1FFFFFF"
            android:layout_marginLeft="40dp"
            android:textSize="27sp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Đăng nhập để tiếp tục"
            android:textColor="#8F000000"
            android:textSize="13sp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"

            />




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="45dp"
        android:layout_marginTop="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#8F000000"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="15sp"
            android:textColor="#FCFF0303"
            android:textStyle="bold"/>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
      >

        <EditText
            android:id="@+id/edttaikhoan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Tên đăng nhập"
            android:textSize="15sp"
            android:background="@drawable/gradient_edittext"
            android:paddingLeft="10dp"
            android:textStyle="italic"/>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="45dp"
        android:layout_marginTop="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#8F000000"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="15sp"
            android:textColor="#FCFF0303"
            android:textStyle="bold"/>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
       >

        <EditText
            android:id="@+id/edtmatkhau"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="************"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:background="@drawable/gradient_edittext"
            android:paddingLeft="10dp"
            android:textStyle="italic"/>


    </androidx.cardview.widget.CardView>



    <Button
        android:id="@+id/btndangnhap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Đăng nhập"
        android:textSize="15sp"

        android:textColor="#FD5F44"
        android:backgroundTint="@color/white"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:textAlignment="textEnd"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="45dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btndangki"
            android:layout_width="155dp"
            android:layout_height="50dp"

            android:textSize="15sp"
            android:text="Đăng kí"
            android:layout_margin="5dp"
            android:textColor="#FD5F44"
            android:backgroundTint="#D9D9D9"
            android:paddingLeft="10dp"
            android:textStyle="bold"

            />

        <Button
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:text="Google"
            android:textColor="#FD5F44"
            android:backgroundTint="#D9D9D9"
            android:paddingLeft="10dp"
            android:textStyle="bold"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="45dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản?"
            android:textColor="#8F000000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtdangki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng kí tài khoản FiveSole"

            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>


    </LinearLayout>




</LinearLayout>