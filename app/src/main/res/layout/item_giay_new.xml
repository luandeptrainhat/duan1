<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"

    android:layout_marginLeft="25dp"

    android:background="@drawable/shape4"

    android:orientation="vertical"
    >

<Button
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_gravity="right"
    android:layout_marginTop="-5dp"
    android:backgroundTint="#AED8D4D4"
    android:drawableBottom="@drawable/xoa"
    />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/air"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bán chạy nhất"
            android:textColor="#FD5F44"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nike Air Fly"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="2.344.999 VNĐ"
                android:textColor="@color/white"
                android:textSize="13sp"

                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="37dp"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/shapemain"

                android:orientation="vertical"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="27sp"


                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

