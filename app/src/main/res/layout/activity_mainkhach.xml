<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E11F1F1F"
    android:orientation="vertical"
    tools:context=".activity.MainKhach">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/man"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chào buổi sáng"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ông chủ"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/baseline_shopping_basket_24" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/baseline_headphones_24" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="#333333"
            android:drawableLeft="@drawable/baseline_search_24"
            android:padding="10dp"
            android:text="Tìm kiếm loại giày,..."
            android:textColor="#90F6F3F3"
            android:textFontWeight="@integer/material_motion_duration_medium_2"
            android:textSize="16sp"

            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="#333333"
            android:src="@drawable/baseline_sort_24" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/lineartheothao"
            android:layout_width="75dp"
            android:layout_height="37dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/shapemain3"


            >

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/giaythethao"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp"
                app:civ_circle_background_color="@color/white"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Giày thể thao"
                android:textColor="@color/black"
                android:textSize="7sp"
                android:textStyle="bold"

                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearleonui"
            android:layout_width="75dp"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/shapemain3"

            android:orientation="vertical"

            >

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/giayleonui"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp"
                app:civ_circle_background_color="@color/white"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Giày leo núi"
                android:textColor="@color/black"
                android:textSize="7sp"


                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="75dp"
            android:id="@+id/linearda"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/shapemain3"
            android:orientation="vertical"
            android:padding="3dp"

            >

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/giayda"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp"
                app:civ_circle_background_color="@color/white"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Giày Da"
                android:textColor="@color/black"
                android:textSize="7sp"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/linearthoitrang"
            android:layout_marginTop="3dp"
            android:background="@drawable/shapemain3"
            android:orientation="vertical"
            android:padding="3dp"

            >

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/giaythoitrang"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp"
                app:civ_circle_background_color="@color/white"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Giày Thời Trang"
                android:textColor="@color/black"
                android:textSize="7sp"


                />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản phẩm đặc biệt"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="Xem tất cả"
            android:textColor="@color/white"
            android:textSize="14sp"

            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/fragmentchung"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />


</LinearLayout>
